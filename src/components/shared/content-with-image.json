{
  "collectionName": "components_shared_content_with_images",
  "info": {
    "displayName": "Content With Image",
    "icon": "picture",
    "description": ""
  },
  "options": {},
  "attributes": {
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "bgColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": true,
      "customField": "plugin::color-picker.color"
    },
    "variant": {
      "type": "enumeration",
      "enum": [
        "image_left",
        "image_right"
      ],
      "required": true,
      "default": "image_right"
    }
  }
}
